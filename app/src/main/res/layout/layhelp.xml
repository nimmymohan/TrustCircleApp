<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayHelp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- Help page header                                    -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Trust Circle Help"
            android:textSize="22dp"
            android:textColor="@color/black"/>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- Help page contents                                  -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New member and new circle"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:gravity="left"
            android:textSize="20dp"
            android:text=
                "STEP 1: Member sign up\nSTEP 2: Create circle\nSTEP 3: Share circle name and pin\n               with other members"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nNew member and existing circle"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:gravity="left"
            android:textSize="20dp"
            android:text=
                "STEP 1: Member sign up\nSTEP 2: Join circle using circle name\n               and pin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nExisting member and existing circle"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:gravity="left"
            android:textSize="20dp"
            android:text=
                "STEP 1: Member sign in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nLAST STEP"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:gravity="left"
            android:textSize="20dp"
            android:text=
                "View locations of circle members"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
